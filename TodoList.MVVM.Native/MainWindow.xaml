<Window x:Class="TodoList.MVVM.Native.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TodoList.MVVM.Native"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:TodoList.MVVM.Native.ViewModels"
        Title="待办清单"
        Width="450"
        Height="400"
        d:DataContext="{d:DesignInstance Type=viewModels:TodoViewModel}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="HarmonyOS Sans SC" />
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">
        <StackPanel Margin="0,0,0,8"
                    DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <TextBox Width="250"
                     Margin="0,0,8,0"
                     Text="{Binding NewItemTitle, UpdateSourceTrigger=PropertyChanged}" />
            <Button Width="145"
                    Margin="10,0,0,0"
                    Command="{Binding AddCommand}"
                    Content="添加" />
        </StackPanel>

        <ListBox Width="340"
                 Margin="10"
                 ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding IsDone}" />
                        <TextBox Width="200"
                                 Margin="5"
                                 Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Margin="0,8,0,0"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Bottom"
                    Orientation="Vertical">
            <Button Margin="0,0,8,8"
                    Command="{Binding RemoveCommand}"
                    Content="删除"
                    IsEnabled="True" />
            <Button Margin="0,0,8,8"
                    Command="{Binding ToggleCommand}"
                    Content="切换完成" />
            <Button Margin="0,0,8,8"
                    Command="{Binding SaveCommand}"
                    Content="保存" />
            <Button Margin="0,0,8,0"
                    Command="{Binding LoadCommand}"
                    Content="加载" />
        </StackPanel>
    </DockPanel>
</Window>
