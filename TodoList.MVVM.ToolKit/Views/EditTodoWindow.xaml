<Window x:Class="TodoList.MVVM.ToolKit.Views.EditTodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:TodoList.MVVM.ToolKit.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="EditTodoWindow"
        Width="400"
        Height="232"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="标题：" />
        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,0,0,8"
                 hc:InfoElement.Title="标题"
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="截止日期：" />
        <DatePicker Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,0,8"
                    SelectedDate="{Binding DueDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />

        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Margin="0,0,8,8"
                   VerticalAlignment="Center"
                   Text="状态：" />
        <CheckBox Grid.Row="2"
                  Grid.Column="1"
                  Margin="0,0,0,8"
                  Content="已完成"
                  IsChecked="{Binding IsDone, Mode=TwoWay}" />

        <StackPanel Grid.Row="3"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Width="88"
                    Margin="0,8,8,0"
                    Click="Button_Click"
                    Command="{Binding OKCommand}"
                    Content="确定"
                    IsDefault="True" />
            <Button Width="88"
                    Margin="0,8,8,0"
                    Content="取消"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
