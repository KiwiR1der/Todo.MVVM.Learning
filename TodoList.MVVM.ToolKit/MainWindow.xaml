<Window x:Class="TodoList.MVVM.ToolKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:TodoList.MVVM.ToolKit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TodoList.MVVM.ToolKit.ViewModels"
        Title="MainWindow"
        Width="400"
        Height="450"
        d:DataContext="{d:DesignInstance Type=vm:TodoItemViewModel}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <!--<Window.DataContext>
        <vm:TodoItemViewModel />
    </Window.DataContext>-->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ListBox Margin="2,2,2,2"
                 ItemsSource="{Binding TodoItems}"
                 SelectedItem="{Binding SelectedTodoItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="5" VerticalAlignment="Center">
                        <CheckBox Margin="0,0,10,0"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding IsDone}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Title}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <UniformGrid Grid.Row="0"
                     Grid.Column="1"
                     Rows="3">
            <Button Command="{Binding RemoveCommand}"
                    Content="移除"
                    Style="{StaticResource ButtonPrimary}" />
            <Button Command="{Binding SaveCommand}"
                    Content="保存"
                    Style="{StaticResource ButtonPrimary}" />
            <Button Command="{Binding LoadCommand}"
                    Content="加载"
                    Style="{StaticResource ButtonPrimary}" />
        </UniformGrid>

        <TextBox Grid.Row="1"
                 Grid.Column="0"
                 Margin="2,2,2,2"
                 Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}" />

        <Button Grid.Row="1"
                Grid.Column="1"
                Command="{Binding AddCommand}"
                Content="添加"
                Style="{StaticResource ButtonPrimary}" />
    </Grid>
</Window>
